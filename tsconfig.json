{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "diagnostics": false,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "pretty": true,
    "target": "es5",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "files": [
    "./lib/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
